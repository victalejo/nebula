# Nebula Environment Variables
# Copy this file to .env and modify as needed

# Server
NEBULA_HOST=0.0.0.0
NEBULA_PORT=8080

# Database
NEBULA_DB_PATH=./data/nebula.db

# Docker
NEBULA_DOCKER_HOST=unix:///var/run/docker.sock

# Caddy
NEBULA_CADDY_ADMIN_URL=http://localhost:2019

# Data directory
NEBULA_DATA_DIR=./data

# Authentication
NEBULA_JWT_SECRET=your-secret-key-change-in-production
NEBULA_ADMIN_USERNAME=admin
NEBULA_ADMIN_PASSWORD=admin

# Logging
NEBULA_LOG_LEVEL=info
NEBULA_LOG_FORMAT=text

# Domain (optional - for auto SSL)
# NEBULA_DOMAIN=nebula.example.com
